{{#if removedUser}}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    Equipment Has Been Removed!
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
{{/if}}
<!--Lawn Equipment Table-->
<div class="row">
  <div  class="col-6"><h1>Lawn Equipment</h1></div>
  <div  class="col-6 d-flex justify-content-end">
    <a href="/addequip" type="button" class="btn btn-primary align-self-center">+ add equipment</a>
  </div>
</div>
<table class="table table-bordered">
  <thead class="thead-dark">
  <tr>
    <th scope="col">#</th>
    <th scope="col">Equipment Name</th>
    <th scope="col">Manufacture Name</th>
    <th scope="col">Serial Number</th>
    <th scope="col">Vendor</th>
    <th scope="col" class="text-end">Action</th>
  </tr>
  </thead>
  <tbody>
  {{#each rows}}
  <tr>
    <th scope="row">{{this.id}}</th>
    <td>{{this.equip_name}}</td>
    <td>{{this.mfr}}</td>
    <td>{{this.serial_num}}</td>
    <td>{{this.vendor}}</td>
    <td class="text-end">
      <a href="/viewequip/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
      <a href="/editequip/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
      <a href="/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
    </td>
  </tr>
  {{/each}}
  </tbody>
</table>
<!--User enters zip code-->
<div class="container pt-5 pb-5"><h1>User Info</h1>
  <div class="container-fluid">
    <div class="col-md-12">
      <form [formGroup]="myZip">
        <div class="row">
          <label for="zip1">Zip Code: </label>
        </div>
        <div class="col-sm-2">
          <input id="zip1" type="text" formControlName="zipFC">
        </div>
        <div class="row">
          <div class="col-sm-2">
            <button type="submit" >Submit</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
