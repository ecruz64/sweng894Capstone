{{#if removedUser}}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    Equipment Has Been Removed!
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
{{/if}}
<!--Lawn Equipment Table-->
<div class="row">
  <div  class="col-6"><h1>Lawn Equipment</h1></div>
  <div  class="col-6 d-flex justify-content-end">
    <a href="/addequip" type="button" class="btn btn-primary align-self-center">+ add equipment</a>
  </div>
</div>
<table class="table table-bordered">
  <thead class="thead-dark">
  <tr>
    <th scope="col">Rec ID</th>
    <th scope="col">Equipment Name</th>
    <th scope="col">Manufacture Name</th>
    <th scope="col">Serial Number</th>
    <th scope="col">Vendor</th>
    <th scope="col" class="text-end">Action</th>
  </tr>
  </thead>
  <tbody>
  {{#each rows}}
  <tr>
    <th scope="row">{{this.id}}</th>
    <td>{{this.equip_name}}</td>
    <td>{{this.mfr}}</td>
    <td>{{this.serial_num}}</td>
    <td>{{this.vendor}}</td>
    <td class="text-end">
      <a href="/viewequip/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
      <a href="/editequip/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
      <a href="/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
    </td>
  </tr>
  {{/each}}
  </tbody>
</table>
<!--User enters zip code-->
<div class="input-group mb-3">
  <input type="text" class="form-control" placeholder="Enter Your Zip Code Here" aria-label="Example text with button addon" aria-describedby="button-addon1">
  <button class="btn btn-primary align-self-center" type="button" id="button-addon1">Submit</button>
</div>
<table class="table"><h1>Weather Table</h1>
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Temp</th>
    <th scope="col">Rain Fall</th>
    <th scope="col">Humidity</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <th scope="row">1</th>
    <td>35.5</td>
    <td>.01</td>
    <td>35</td>
  </tr>
  <tr>
    <th scope="row">2</th>
    <td>33</td>
    <td>.20</td>
    <td>45</td>
  </tr>
  <tr>
    <th scope="row">3</th>
    <td>40</td>
    <td>3</td>
    <td>50</td>
  </tr>
  </tbody>
</table>
